<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="true">
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>[%d] [%thread] %-5level %logger{36} - %msg%n
			</pattern>
		</encoder>
	</appender>

	<appender name="FILE"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>/appl/lmp-services/basicgateway/logs/gateway.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<!-- daily rollover -->
			<fileNamePattern>/appl/lmp-services/basicgateway/logs/rotated/gateway.log%d{yyyy-MM-dd}
			</fileNamePattern>
			<!-- keep 5 days' worth of history capped at 1GB total size -->
			<maxHistory>5</maxHistory>
			<totalSizeCap>1GB</totalSizeCap>
		</rollingPolicy>
		<encoder>
		    <charset>UTF-8</charset>
			<pattern>[%d] [%X{X-B3-TraceId}] [%-4relative] [%thread] [%-5level] [%logger{35}] - %msg%n</pattern>
		</encoder>
	</appender>
	<appender name="accessLog" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>/appl/lmp-services/basicgateway/access_log.log</file>
         <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
                  <!-- daily rollover -->
                  <fileNamePattern>/appl/lmp-services/basicgateway/rotated/access_log.log%d{yyyy-MM-dd}
                  </fileNamePattern>
                  <!-- keep 5 days' worth of history capped at 1GB total size -->
                  <maxHistory>5</maxHistory>
                  <totalSizeCap>1GB</totalSizeCap>
          </rollingPolicy>
          <encoder>
             <pattern>[%X{X-B3-TraceId}] %msg%n</pattern>
          </encoder>
       </appender>
       <appender name="async" class="ch.qos.logback.classic.AsyncAppender">
         <appender-ref ref="accessLog" />
       </appender>

        <logger name="reactor.netty.http.server.AccessLog" level="INFO" additivity="false">
          <appender-ref ref="async"/>
        </logger>
        <logger name="com.dp.juno.lite.router" level="DEBUG" />
        <logger name="reactor.netty.resources.PooledConnectionProvider" level="DEBUG" />
        <root level="info">
            <appender-ref ref="FILE" />
        </root>

</configuration>